{
  "version": 2,
  "buildCommand": "echo 'Static site - no build needed'",
  "outputDirectory": "landing-page",
  "installCommand": "echo 'No dependencies to install'",
  "framework": null,
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/download",
      "destination": "https://github.com/jeperkins4/medical-research-tracker/releases/latest",
      "permanent": false
    }
  ],
  "ignore": [
    "server/**",
    "src/**",
    "electron/**",
    "data/**",
    "backups/**",
    "supabase/**",
    "node_modules/**",
    "*.js",
    "*.cjs",
    "*.md",
    "package.json",
    "package-lock.json"
  ]
}
